{
  "name": "nodejs-demo",
  "version": "1.0.0",
  "description": "nodejs with express and typescript",
  "main": "dist/app.js",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript"
  ],
  "author": "Harry",
  "license": "ISC",
  "dependencies": {
    "dotenv": "16.4.7",
    "ejs": "^3.1.10",
    "express": "5.0.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "3.1.9",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules",
      "dist"
    ],
    "exec": "ts-node ./src/app.ts"
  }
}
